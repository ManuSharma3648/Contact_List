<html>
    <head>
        <title>
            <%= title %>
        </title>
        
        <script src="https://kit.fontawesome.com/a24d493279.js" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <!-- this should be always below -->
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>


        <h1 id="page-heading">
            <i id="icon" class="fas fa-address-book"></i> My Contact List</h1>
            <form action="/create-contact" method="post"  class="mb-3" id="form">
                <label for="validationCustom05" class="form-label">Name</label>  
                <input type="text"  class="form-control" name="name" placeholder="Enter Name" required>
                <label for="validationCustom05" class="form-label">Phone Number</label>
                <input type="number" name="phone" placeholder="Enter Phone number" class="form-control" id="validationCustom05" required>
                <button type="submit" class="btn btn-primary" id="submitButton">  Add Contact</button>
            </form>
       
            <div id="ul-div" >
            <ul class="list-group list-group-flush" id="ul">
                <% for(let i of contact_list){ %>
                    <li id = "item" class="list-group-item">
                        <p id="para1"><%= i.name %></p>
                        <p id="para2"><%= i.phone %></p>
                        <a href="/delete-contact/?phone=<%= i.phone%>&name=<%= i.name %>">
                        <button type="button" class="btn-close" id="delete-button" aria-label="Close"></button></a>
                    </li>
                    <% } %>
            </ul>
        </div>
        
        <script src="/js/home.js" type="text/javascript"></script>
    </body>
</html>